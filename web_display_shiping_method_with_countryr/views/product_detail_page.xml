<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="product" inherit_id="website_sale.product">
<!--            <xpath expr="//div[@id='product_option_block']" position="after">-->
            <xpath expr="//div[@id='delevery_message']" position="after">
                <!--display shiping method and country-->
                <div style="gap: 5px; display: block !important; margin-top: 12px !important;" class="d-flex flex-wrap w-100">
                    <span style="
                           font-family: 'Poppins', sans-serif !important;
                            font-weight: 500 !important; /* Poppins Medium */
                            background: rgba(255, 252, 238, 0.5) !important; /* BG Color: #FFFCEE, opacity 50% */
                            padding: 0.4rem 0.6rem !important;
                            width: fit-content !important;
                            border-radius: 4px !important;
                            color: #5E5216 !important; /* Font color */
                            font-size: 12px !important; /* Font size 12 */
                            border: 0.5px solid #5E5216 !important; /* Border color and size */
                            ">
                        <span>
                            <t t-if="country_code not in ('CY', 'GR')">
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                Shipping to
                                <b t-out="country"/>
                                via <b>FEDEX</b> = €10
                                <br/>
                                <span style="margin-left: 13px !important;">
                                    Delivered to your Door in less than <b>48hrs</b>.
                                </span>
                            </t>
                            <t t-elif="country_code in ('CY')">
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                <b>Free</b>
                                Shipping via
                                <b>Akis Express.</b>
                            </t>
                            <t t-elif="country_code in ('GR')">
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                <b>Free</b>
                                Shipping via to <b t-out="country"/> via <b>FEDEX</b>
                                <br/>
                                <span style="margin-left: 13px !important;">
                                    Delivered to your Door in less than <b>48hrs</b>.
                                </span>
                            </t>
                        </span>

                    </span>
                </div>
            </xpath>
        </template>


