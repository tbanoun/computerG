<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div class="row mt16 o_settings_container" name="operations_setting_container" position="after">
                    <div class="row mt16 o_settings_container" name="operations_setting_container_2">
                        <h2>Config Supplier CronJob Csv</h2>
                        <group>
                            <field name="stock_supplier_id" string="Stock Supplier"/>
                        </group>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn-primary" name="resetProductInformation" type="object"
                                        string="Reset Product Information"
                                        help="Reinitialize quantity and price to zero"/>
                            </div>
                            <div class="col-6">
                                <button class="btn-primary" name="updateMessageDelivery" type="object"
                                        string="Update Delivery Message"
                                        help="Reinitialize quantity and price to zero"/>
                            </div>
                        </div>


                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>