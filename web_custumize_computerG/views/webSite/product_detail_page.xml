<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <template id="my_custom_product_wishlist" inherit_id="website_sale.product" name="Custom Wishlist Button"
                  priority="100">
            <xpath expr="//button[@data-action='o_wishlist']" position="replace">
            </xpath>

            <xpath expr="//div[@id='add_to_cart_wrap']" position="replace">
