<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="product" inherit_id="website_sale.product">
            <xpath expr="." position="inside">
                <script type="module" src="/web_custumize_computerG/static/src/js/variant_mixin.js"></script>
            </xpath>
            <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="after">
                <br/>
                <p t-field="o.user_id.name" class="m-0"/>
                <p t-field="o.user_id.country_id.name" class="m-0"/>
                <br/>
                <t t-set="notShowbtn" t-value="True"/>
                <div class="d-flex align-items-start">
                    <style>
                        .cls-sahrane p{
                        display: contents !important;
                        }
                    </style>
                    <!-- Bloc des 3 messages -->
                    <div class="d-flex flex-column" style="gap: 5px;">
                        <!-- onStock -->
                        <span style="display : none !important;" id="informationQtyMessageDelivery1"
                              class="alert alert-success py-1 px-2 mb-0">
                            <t t-if="request.env.user.property_product_pricelist.showQtyOnStock">
                                <span id="messageGroup">
                                    <span id="messageQty1"/>
                                </span>
                            </t>
                            <span id="messageDelevryTime1"/>
                        </span>

                        <!-- remote stock -->
                        <span style="display : none !important;" id="informationQtyMessageDelivery2"
                              class="alert alert-success py-1 px-2 mb-0">
                            <t t-if="request.env.user.property_product_pricelist.showQtyOnStock">
                                <span id="messageGroup">
                                    <span id="messageQty2"/>
                                </span>
                            </t>
                            <span id="messageDelevryTime2"/>
                        </span>

                        <!-- out of stock -->
                        <span style="display : none !important;" id="informationQtyMessageDelivery3"
                              class="alert alert-success py-1 px-2 mb-0">
                            <t t-if="request.env.user.property_product_pricelist.showQtyOnStock">
                                <span id="messageGroup">
                                    <span id="messageQty3"/>
                                </span>
                            </t>
                            <span id="messageDelevryTime3"/>
                        </span>
                    </div>

