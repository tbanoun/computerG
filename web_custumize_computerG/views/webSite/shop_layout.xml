    <record id="product_item_grid_1_nce2" model="ir.ui.view">
        <field name="name">product_item_grid_1_nce</field>
        <field name="inherit_id" search="[('key', '=', 'theme_prime.product_item_grid_1')]"/>
        <field name="type">qweb</field>
        <field name="key">web_custumize_computerG.product_item_grid_1_nce2</field>
