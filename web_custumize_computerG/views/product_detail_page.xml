<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="product" inherit_id="website_sale.product">
            <xpath expr="//div[@class='availability_messages o_not_editable']" position="replace">
            </xpath>
            <xpath expr="//div[@id='product_option_block']" position="before">
                <div class="col-12">
                    <div class="row mt-4 mb-4" t-if="product.qty_available > 0">
                        <div class="col-12">
                            <b>
                                <span style="
                margin-left:5px !important;
                font-weight: 500 !important;
                background: #e5ffe978 !important;
                padding: 0.4rem 0.6rem !important;
                width: fit-content !important;
                border-radius: 0.2rem !important;
                color: #067d24 !important;
                border: 1px solid #19a22f; !important
"
                                      class="ml-2 text-right alert alert-success w-40">
                                    <span t-esc="int(product.qty_available)"/>
                                    in Stock | Ship 1-2 days
                                </span>
                            </b>
                        </div>
                    </div>
                    <div class="row mt-4 mb-4" t-if="product.qty_available_wt > 0">
                        <div class="col-12">
                            <b>
                                <span style="
                            margin-left:5px !important;
                font-weight: 500 !important;
                background: #e5ffe978 !important;
                padding: 0.4rem 0.6rem !important;
                width: fit-content !important;
                border-radius: 0.2rem !important;
                color: #067d24 !important;
                border: 1px solid #19a22f; !important
                "
                                      class="ml-2 text-right alert alert-warning w-40">
                                    <span t-esc="int(product.qty_available_wt)"/>
                                    in remote Stock | Ship 4-8 days
                                </span>
                            </b>
                        </div>
                    </div>
                </div>

            </xpath>
        </template>


    </data>
</odoo>