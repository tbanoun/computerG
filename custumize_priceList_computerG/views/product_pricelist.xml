<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="website_sale_pricelist_form_view" model="ir.ui.view">
            <field name="name">website_sale.pricelist.form</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="model">product.pricelist</field>
            <field name="arch" type="xml">
                <div class="oe_title" position="after">
                    <group>
                        <group class="col-3">
                            <label for="discount_attribute" string="Discount feature"/>
                            <div class="o_row">
                                <field name="discount_attribute" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                </div>
            </field>
        </record>
    </data>
</odoo>