<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ip_geolocation_pricelist_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">ip.geolocation.pricelist.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- IP Cache -->
            <xpath expr="//div[@id='website_info_settings']" position="after">
                <h2>Shop - IP Cache</h2>
                <div class="row mt16 o_settings_container" id="website_ip_cache">
                    <div class="col-xs-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="ip_cache_duration"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="ip_cache_duration"/>
                            <div class="text-muted">
                                Duration of IP caching (in days).
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <!-- Pricelist Geolocation -->
            <xpath expr="//div[@id='pricelists_setting']" position="inside">
                <div class="o_setting_left_pane">
                    <field name="enable_geolocation_pricelist"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="enable_geolocation_pricelist"/>
                    <div class="text-muted">
                        Set pricelist based on customer's geolocation.
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
