<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit.export</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="exportData" type="object" string="Export Template for Products" class="btn btn-info"/>
                </xpath>
            </field>
        </record>


        <record id="view_stock_product_template_tree" model="ir.ui.view">
            <field name="name">product.template.stock.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="exportData" type="object" string="Export Template for Products" class="btn btn-info"/>
                </header>
            </field>
        </record>


        <record model="ir.ui.view" id="product_template_form_view_wherhouse_button">
            <field name="name">product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manufacturer_id']" position="replace">
                    <field name="manufacturer_id_int" context="{'res_partner_search_mode': 'supplier'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
